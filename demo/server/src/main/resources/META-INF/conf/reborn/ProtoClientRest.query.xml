<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0" object-id="ProtoClient">

    <list result-mapping="#this">
        <rest>http://localhost:8081/api/clients?{filters}&amp;page={page}&amp;size={limit}&amp;{sorting}</rest>
    </list>

    <unique result-mapping="#this">
        <rest>http://localhost:8081/api/clients/{id}</rest>
    </unique>

    <count>
        <rest>http://localhost:8081/api/clients/count</rest>
    </count>

    <fields>
        <field id="id">
            <select/>
            <filters>
                <eq filter-id="id">id={id}</eq>
            </filters>
        </field>

        <field id="surname" name="Фамилия">
            <select/>
        </field>

        <field id="name" name="Имя">
            <select/>
        </field>

        <field id="patrName" name="Отчество">
            <select/>
        </field>

        <field id="birthday" name="Дата рождения">
            <select mapping="['birthDate']"/>
            <sorting mapping="['birthdayDirection']">sort=birth_dt,{birthdayDirection}</sorting>
        </field>

        <field id="vip" name="VIP">
            <select/>
        </field>
    </fields>

</query>

