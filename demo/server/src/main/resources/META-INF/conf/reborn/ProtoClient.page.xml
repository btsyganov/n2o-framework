<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0" route="/client">
    <form query-id="ProtoClientRest" name="Карточка клиента">
        <fields>
            <row>
                <input-text label="Фамилия" id="surname" required="true" placeholder="Введите значение"/>
                <input-text label="Имя" id="name" required="true"/>
                <input-text label="Отчество" id="patrName" default-value="Тест"/>
            </row>
            <row>
                <col size="5">
                    <radio-group id="gender" label="Пол" required="true"
                            query-id="ProtoGender" label-field-id="name"/>
                </col>
                <col size="5">
                    <date-time id="birthday" label="Дата рождения" date-format="DD.MM.YYYY"/>
                </col>
                <checkbox id="vip">
                </checkbox>
            </row>
        </fields>
    </form>
</simple-page>